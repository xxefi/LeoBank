    Margin="247,420,0,0"
    Background="WhiteSmoke"
    VerticalAlignment="Top"
    Padding="30"
    MaxWidth="150"
    CornerRadius="38" Height="162" RenderTransformOrigin="0.5,0.5" Grid.Row="1"/>
